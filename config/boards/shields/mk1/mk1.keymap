#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = < 
                &kp Q  // Row 0, Column 0
                &kp W  // Row 1, Column 0
                &bootloader  // Row 2, Column 0
                &bt BT_CLR      // Clear Bluetooth bonds
                &bt BT_SEL 0    // Select first Bluetooth profile
            >;
        };
    };
};