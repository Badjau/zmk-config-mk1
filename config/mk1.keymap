#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    behaviors {
        sticky_shift: sticky_shift {
            compatible = "zmk,behavior-sticky-key";
            label = "STICKY_SHIFT";
            #binding-cells = <1>;
            bindings = <&kp>;
            release-after-ms = <1000>;
            quick-release;                // Makes it release immediately after a keypress
        };
        
        ult_shift: ult_shift {
            compatible = "zmk,behavior-hold-tap";
            label = "ULT_SHIFT";
            #binding-cells = <2>;
            tapping-term-ms = <220>;
            quick-tap-ms = <0>;
            flavor = "hold-preferred";
            bindings = <&kp>, <&td_shift>;
        };

        td_shift: tap_dance_shift {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_SHIFT";
            #binding-cells = <0>;
            tapping-term-ms = <220>;
            bindings = <&sticky_shift LSHFT>, <&kp CAPS>;    // Now using our custom sticky shift
        };
     

        // Macro that acts like a tap dance but is configurable
        layer_tap_toggle: layer_tap_toggle {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TOGGLE";
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&mo>, <&sl>;         // Hold for momentary, tap for sticky
        };
    };

    macros {
        // Macro to force layer switch on double tap
        to_layer: to_layer {
            compatible = "zmk,behavior-macro";
            label = "TO_LAYER";
            #binding-cells = <1>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&to>;
        };
    };

    keymap {    
        compatible = "zmk,keymap";
        default_layer {
            display-name = "QWERTY : )";
            bindings = <   
                &kp TAB             &kp Q       &kp W       &kp E       &kp R       &kp T       &kp Y       &kp U       &kp I       &kp O       &kp P       &kp BSLH  
                &ult_shift LSHFT 0  &kp A       &kp S       &kp D       &kp F       &kp G       &kp H       &kp J       &kp K       &kp L       &kp SEMI    &kp APOS   
                &kp LCTRL           &kp Z       &kp X       &kp C       &kp V       &kp B       &kp N       &kp M       &kp COMMA   &kp DOT     &kp SLASH   &kp ENTER 
                                                            &layer_tap_toggle 1 1   &kp SPACE   &kp LALT    &kp RSHIFT  &kp BSPC    &layer_tap_toggle 3 3  
            >;
        };

        // Layer 1 (Activated on hold)
        layer_1 {
            display-name = "Number";
            bindings = <
                &kp GRAVE       &kp N1      &kp N2      &kp N3      &kp N4      &kp N5      &kp N6      &kp N7      &kp N8      &kp N9      &kp N0      &none 
                &trans          &none       &none       &none       &none       &none       &none       &none       &none       &none       &kp MINUS   &kp EQUAL
                &kp LWIN        &none       &none       &none       &none       &none       &trans      &trans      &kp LBKT    &kp RBKT    &none       &none 
                                                        &trans      &trans      &kp LALT    &trans      &kp DEL     &trans  
            >;
        };

        // Layer 2 (Activated on tap)
        F_keys {
            display-name = "Function"; 
            bindings = <
                &kp ESC         &trans      &none       &none       &none       &none       &none       &trans      &trans      &trans      &trans      &trans
                &kp F1          &kp F2      &kp F3      &kp F4      &kp F5      &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &kp F11     &kp F12 
                &none           &none       &none       &none       &none       &none       &trans      &trans      &none       &trans      &trans      &trans 
                                                        &to 0       &none       &kp LALT    &kp K_APP   &none       &trans   
            >;
        };

        // Layer 3 (Activated on hold)
        Nav_layer {
            display-name = "Navigation";
            bindings = <
                &trans          &none       &none       &none       &none       &none       &trans      &trans      &kp UP      &none       &kp HOME       &kp END 
                &trans          &none       &none       &none       &none       &none       &trans      &kp LEFT    &kp DOWN    &kp RIGHT   &kp PG_UP      &trans 
                &trans          &none       &none       &none       &none       &none       &trans      &trans      &trans      &trans      &kp PG_DN      &trans 
                                                        &trans      &trans      &trans      &trans      &trans      &trans  
            >;
        };
        // Layer 4 (Activated on tap)
        Empty_layer {
            display-name = "0";
            bindings = <
                &none           &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none 
                &none           &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none 
                &none           &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none 
                                                        &none       &none       &none       &none       &none       &none  
            >;
        };
    };
};